doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Weather App
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #333;
        color: white;
      }
      .header {
        background-color: #1a5f7a;
        padding: 20px;
        text-align: center;
      }
      .header h1 {
        margin: 0;
      }
      .search-container {
        text-align: center;
        margin-top: 50px;
      }
      input[type="text"] {
        padding: 10px;
        width: 300px;
        border: none;
        border-radius: 5px;
        margin-right: 10px;
      }
      button {
        padding: 10px 20px;
        background-color: #1a5f7a;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      button:hover {
        background-color: #154b61;
      }

  body
    .header
      h1 Weather App
    .search-container
      form(action="/weather", method="get")
        input(type="text", name="city", placeholder="Enter location", required)
        button(type="submit") Search
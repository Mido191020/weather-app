doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Weather Info for #{weather.name}
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #333;
        color: white;
      }
      .header {
        background-color: #1a5f7a;
        padding: 20px;
        text-align: center;
      }
      .header h1 {
        margin: 0;
      }
      .weather-info {
        text-align: center;
        margin-top: 50px;
      }
      .temperature {
        font-size: 48px;
        margin-bottom: 10px;
      }
      .description {
        font-size: 24px;
        margin-bottom: 20px;
      }
      .back-link {
        display: inline-block;
        margin-top: 20px;
        color: #1a5f7a;
        text-decoration: none;
      }
      .back-link:hover {
        text-decoration: underline;
      }

  body
    .header
      h1 Weather App
    .weather-info
      h2 Weather in #{weather.name}
      .temperature #{weather.main.temp}Â°#{unit === 'imperial' ? 'F' : 'C'}
      .description #{weather.weather[0].description}
      a.back-link(href="/") Back to Search